<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{HH:mm:ss} [%p] – %m%n" />
        </Console>

        <RollingFile name="RollingFile"
                     fileName="/home/spring/Ewi.log"
                     filePattern="/home/spring/Ewi-%d{-dd-MMMM-yyyy}-%i.log">
            <PatternLayout>
                <pattern>%d{HH:mm:ss} [%p] – %m%n</pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy
                        size="10 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>

</Configuration>